@page "/merchants"
@using ePine.Models

<PageTitle>Merchants</PageTitle>

<div class="management-list">
    <div class="input-group mb-3">
        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
        <button type="button" class="btn btn-outline-primary">Search</button>
    </div>
    <div>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample" aria-expanded="false" aria-controls="collapseWidthExample">
            Type of services
        </button>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample" aria-expanded="false" aria-controls="collapseWidthExample">
            Location
        </button>
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample" aria-expanded="false" aria-controls="collapseWidthExample">
            Filter 3
        </button>
        
    </div>
</div>
<hr/>

<div class="container text-center">
    <div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3">
        @foreach (var merchant in merchants)
        {
            <div class="col">
                <div class="p-3 border bg-light">
                    <div class="card" style="width: 100%">
                        <img src="images/ePine-background.png" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@merchant.Name</h5>
                            <p class="card-text">@merchant.Description</p>
                            <a href="merchants/@merchant.Id" class="btn btn-primary">See more details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

