@using Square.Models

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Appointment details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (AppointmentModel == null)
                {
                    <h3>Loading..</h3>
                }
                else
                {
                    <div class="container">
                        <div class="row">
                            <div class="col col-6">Service</div>
                            <div class="col col-6"></div>
                        </div>
                        
                        <div class="row">
                            <div class="col col-6">Location</div>
                            <div class="col col-6"></div>
                        </div>
                        <div class="row">
                            <div class="col col-6">Date and time</div>
                            <div class="col col-6"></div>
                        </div>
                        <div class="row">
                            <div class="col col-6">Service duration</div>
                            <div class="col col-6"></div>
                        </div>
                        <div class="row">
                            <div class="col col-6">Team member</div>
                            <div class="col col-6"></div>
                        </div>
                        <div class="row">
                            <div class="col col-6">Customer Note</div>
                            <div class="col col-6"></div>
                        </div>

                    </div>
                    @AppointmentModel.CustomerNote
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>

@code {
    [Parameter]
    public Booking AppointmentModel { get; set; }
}
